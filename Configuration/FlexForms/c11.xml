<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<T3DataStructure>
    <ROOT>
        <type>array</type>
        <el>
            <settings.view>
                <TCEforms>
                    <label>Wählen Sie eine Darstellungsart für die Einstiegsübersicht der Objekte</label>
                    <config>
                        <type>select</type>
                        <renderType>selectSingle</renderType>
                        <size>1</size>
                        <items type="array">
                            <numIndex index="0" type="array">
                                <numIndex index="0">Horizontale Accordion-Darstellung der Objekte</numIndex>
                                <numIndex index="1">1</numIndex>
                            </numIndex>
                            <numIndex index="1" type="array">
                                <numIndex index="0">Vertikale Objektdarstellung</numIndex>
                                <numIndex index="1">2</numIndex>
                            </numIndex>
                             <numIndex index="2" type="array">
                                <numIndex index="0">Kacheldarstellung der Objektübersicht</numIndex>
                                <numIndex index="1">3</numIndex>
                            </numIndex>
                        </items>
                        <minitems>1</minitems>
                    </config>
                </TCEforms>
            </settings.view>
            <settings.col>
                <TCEforms>
                    <label>Wählen Sie hier die Anzahl der Kacheln, die in der Desktopansicht nebeneinander dargestellt werden sollen</label>
                    <config>
                        <type>select</type>
                        <renderType>selectSingle</renderType>
                        <size>1</size>
                        <items type="array">
                            <numIndex index="0" type="array">
                                <numIndex index="0">3 Kacheln</numIndex>
                                <numIndex index="1">col-md-4</numIndex>
                            </numIndex>
                            <numIndex index="1" type="array">
                                <numIndex index="0">4 Kacheln</numIndex>
                                <numIndex index="1">col-md-3</numIndex>
                            </numIndex>
                            <numIndex index="2" type="array">
                                <numIndex index="0">2 Kacheln</numIndex>
                                <numIndex index="1">col-md-6</numIndex>
                            </numIndex>
                            <numIndex index="3" type="array">
                                <numIndex index="0">6 Kacheln</numIndex>
                                <numIndex index="1">col-md-2</numIndex>
                            </numIndex>
                        </items>
                        <minitems>1</minitems>
                    </config>
                </TCEforms>
            </settings.col>
            <settings.previewimgfit>
                <TCEforms>
                    <label>Wählen Sie hier die Art und Weise, wie die Abbildung in der Listenübersicht dargestellt werden sollen</label>
                    <config>
                        <type>select</type>
                        <renderType>selectSingle</renderType>
                        <size>1</size>
                        <items type="array">
                            <numIndex index="0" type="array">
                                <numIndex index="0">Bild im nativen Seitenverhältnis</numIndex>
                                <numIndex index="1"></numIndex>
                            </numIndex>
                            <numIndex index="1" type="array">
                                <numIndex index="0">Bild im nativen Seitenverhältnis, eingepasst in einen Bereich mit fester Höhe</numIndex>
                                <numIndex index="1">img_layout_1</numIndex>
                            </numIndex>
                        </items>
                        <minitems>1</minitems>
                    </config>
                </TCEforms>
            </settings.previewimgfit>
            <settings.headline>
                <TCEforms>
                    <label>Überschrift</label>
                    <config>
                        <type>input</type>
                        <size>20</size>
                        <max>255</max>
                        <eval>trim</eval>
                    </config>
                </TCEforms>
            </settings.headline>
            <settings.bodytext>
                <TCEforms>
                    <label>Textblock</label>
                    <config>
                        <type>text</type>
                        <cols>48</cols>
                        <rows>5</rows>
                        <enableRichtext>1</enableRichtext>
                    </config>
                </TCEforms>
            </settings.bodytext>
            <settings.background>
                <TCEforms>
                    <label>Hintergrund Farbe für den Textblock</label>
                    <config>
                        <type>input</type>
                        <renderType>colorpicker</renderType>
                    </config>
                </TCEforms>
            </settings.background>
            <settings.showfilter>
                <TCEforms>
                    <label>Filter anzeigen</label>
                    <config>
                        <type>check</type>
                    </config>
                </TCEforms>
            </settings.showfilter>
            <settings.differentviews>
                <TCEforms>
                    <label>Ansichten auswahl außerhalb des Filterkastens</label>
                    <config>
                        <type>check</type>
                    </config>
                </TCEforms>
            </settings.differentviews>
            <settings.active>
                <TCEforms>
                    <label>Status des Objektes auf der Übersichtsseite anzeigen</label>
                    <config>
                        <type>check</type>
                    </config>
                </TCEforms>
            </settings.active>
            <settings.height>
                <TCEforms>
                    <label>Bildhöhe Vorschau</label>
                    <config>
                        <type>input</type>
                        <size>4</size>
                        <max>4</max>
                        <min>0</min>
                        <eval>trim</eval>
                    </config>
                </TCEforms>
            </settings.height>
            <settings.width>
                <TCEforms>
                    <label>Bildbreite Vorschau</label>
                    <config>
                        <type>input</type>
                        <size>4</size>
                        <max>4</max>
                        <min>0</min>
                        <eval>trim</eval>
                    </config>
                </TCEforms>
            </settings.width>
            <settings.sliderheight>
                <TCEforms>
                    <label>Slider Bildhöhe</label>
                    <config>
                        <type>input</type>
                        <eval>trim</eval>
                    </config>
                </TCEforms>
            </settings.sliderheight>
            <settings.sliderwidth>
                <TCEforms>
                    <label>Slider Bildweite</label>
                    <config>
                        <type>input</type>
                        <eval>trim</eval>
                    </config>
                </TCEforms>
            </settings.sliderwidth>
            <settings.link>
                <TCEforms>
                    <label>Link zur Sammlungsübersicht</label>
                    <config>
                        <type>group</type>
                        <internal_type>db</internal_type>
                        <allowed>pages</allowed>
                        <size>1</size>
                        <minitems>0</minitems>
                        <maxitems>1</maxitems>
                        <show_thumbs>1</show_thumbs>
                    </config>
                </TCEforms>
            </settings.link>
            <settings.backlink>
                <TCEforms>
                    <label>Link zur Listenübersicht</label>
                    <config>
                        <type>group</type>
                        <internal_type>db</internal_type>
                        <allowed>pages</allowed>
                        <size>1</size>
                        <minitems>0</minitems>
                        <maxitems>1</maxitems>
                        <show_thumbs>1</show_thumbs>
                    </config>
                </TCEforms>
            </settings.backlink>
            <settings.linkwrap>
                <TCEforms>
                    <label>Link soll volles Element umspannen (nur vertikale Objektdarstellung, wenn Zeit bei allen anderen auch einbauen)</label>
                    <config>
                        <type>check</type>
                    </config>
                </TCEforms>
            </settings.linkwrap>
            <settings.startingpoint>
              <TCEforms>
                <exclude>1</exclude>
                <label>Datensatzsammlung</label>
                <description>
                    Bitte wählen Sie hier den Ordner aus, in dem Ihre auszulesenden Objekte abgelegt sind.
                </description>
                <config>
                <type>group</type>
                <internal_type>db</internal_type>
                <allowed>pages</allowed>
                <size>3</size>
                <maxitems>50</maxitems>
                <minitems>0</minitems>
                <show_thumbs>1</show_thumbs>
                <wizards>
                  <suggest>
                    <type>suggest</type>
                  </suggest>
                </wizards>
                </config>
              </TCEforms>
            </settings.startingpoint>
            <settings.relatedsingleitemstitle>
                <TCEforms>
                    <label>Titel zu Zugeordnete Exponate/Objekte</label>
                    <config>
                        <type>input</type>
                        <eval>trim</eval>
                        <default>Einzelne zugehörige Sammlungen/Projekte</default>
                    </config>
                </TCEforms>
            </settings.relatedsingleitemstitle>
            <settings.moreimagestitle>
                <TCEforms>
                    <label>Titel zu weiteren Abbildungen</label>
                    <config>
                        <type>input</type>
                        <eval>trim</eval>
                        <default>Highlights der Sammlung/des Projektes</default>
                    </config>
                </TCEforms>
            </settings.moreimagestitle>
            <settings.subobjectstitle>
                <TCEforms>
                    <label>Titel zu zugehöringe Objekten</label>
                    <config>
                        <type>input</type>
                        <eval>trim</eval>
                        <default>Untersammlung</default>
                    </config>
                </TCEforms>
            </settings.subobjectstitle>
            <settings.morelinklabel>
                <TCEforms>
                    <label>Titel - weiter Infos</label>
                    <config>
                        <type>input</type>
                        <eval>trim</eval>
                        <default>Portal</default>
                    </config>
                </TCEforms>
            </settings.morelinklabel>
        </el>
    </ROOT>
</T3DataStructure>