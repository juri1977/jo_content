<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<T3DataStructure>
	<ROOT>
	    <TCEforms>
	        <sheetTitle>Iframe mit Poster, welches man wegklicken kann</sheetTitle>
	    </TCEforms>
	    <type>array</type>
	    <el>
			<settings.poster>
		        <TCEforms>
		            <label>Poster</label>
		            <config>
						<type>inline</type>
						<foreign_table>sys_file_reference</foreign_table>
						<foreign_field>uid_foreign</foreign_field>
						<foreign_sortby>sorting_foreign</foreign_sortby>
						<foreign_table_field>tablenames</foreign_table_field>
						<foreign_match_fields>
							<fieldname>poster</fieldname>
						</foreign_match_fields>
						<foreign_label>uid_local</foreign_label>
						<foreign_selector>uid_local</foreign_selector>
						<overrideChildTca>
							<columns>
								<uid_local>
									<config>
										<appearance>
											<elementBrowserType>file</elementBrowserType>
											<elementBrowserAllowed>jpg,jpeg,png,svg</elementBrowserAllowed>
										</appearance>
									</config>
								</uid_local>
							</columns>
							<types type="array">
								<numIndex index="2">
									<showitem>--palette--;LLL:EXT:core/Resources/Private/Language/locallang_tca.xlf:sys_file_reference.imageoverlayPalette;imageoverlayPalette,--palette--;;filePalette</showitem>
								</numIndex>
							</types>
						</overrideChildTca>

						<minitems>0</minitems>
						<maxitems>1</maxitems>

						<appearance>
							<useSortable>1</useSortable>
							<headerThumbnail>
								<field>uid_local</field>
								<width>45c</width>
								<height>45</height>
							</headerThumbnail>
							<createNewRelationLinkTitle>LLL:EXT:frontend/Resources/Private/Language/locallang_ttc.xlf:images.addFileReference</createNewRelationLinkTitle>
						</appearance>

						<behaviour>
							<allowLanguageSynchronization>1</allowLanguageSynchronization>
						</behaviour>
					</config>
		        </TCEforms>
		    </settings.poster>
		    <settings.width>
	            <TCEforms>
	                <label>Bilder Weite</label>
	                <config>
	                    <type>input</type>
	                </config>
	            </TCEforms>
	        </settings.width>
	        <settings.height>
	            <TCEforms>
	                <label>Bilder HÃ¶he</label>
	                <config>
	                    <type>input</type>
	                </config>
	            </TCEforms>
	        </settings.height>
	        <settings.iframe>
                <TCEforms>
                    <label>Iframe, welcher geladen wird</label>
                    <config>
                        <type>text</type>
                        <rows>5</rows>
        				<cols>100</cols>
                    </config>
                </TCEforms>
            </settings.iframe>
	    </el>
	</ROOT>
</T3DataStructure>
