									<numIndex index="4">
										<numIndex index="0">LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.categoryConjunction.notand</numIndex>
										<numIndex index="1">notand</numIndex>
									</numIndex>
								</items>
