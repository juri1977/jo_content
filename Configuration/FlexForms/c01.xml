                    </config>
                </TCEforms>
            </settings.headline>

            <settings.text>
                <TCEforms>
                    <label>Test</label>
                    <config>
                        <type>text</type>
                        <cols>20</cols>
                        <rows>3</rows>
                    </config>
                    <defaultExtras>richtext:rte_transform[mode=ts_css]</defaultExtras>
                </TCEforms>
            </settings.text>

            <settings.link>
                <TCEforms>
                    <label>Link</label>
                    <config>
                        <type>input</type>
                        <checkbox></checkbox>
