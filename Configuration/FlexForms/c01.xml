                        <wizards type="array">
                            <link type="array">
                                <type>popup</type>
                                <title>Link</title>
                                <icon>actions-wizard-link</icon>
                                <module type="array">
                                    <name>wizard_link</name>
                                </module>
                                <JSopenParams>height=300,width=500,status=0,menubar=0,scrollbars=1</JSopenParams>
                            </link>
                        </wizards>
                    </config>
                </TCEforms>
            </settings.link>

        </el>
    </ROOT>
