            </settings.images>

            <settings.imageheadline>
                <TCEforms>
                    <label>Bild Titel</label>
                    <config>
                        <type>input</type>
                        <size>20</size>
                        <max>255</max>
                        <eval>trim</eval>
                    </config>
                </TCEforms>
            </settings.imageheadline>

            <settings.headline>
